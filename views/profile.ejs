<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../stylesheets/style.css">
</head>
<body>
  <div id="hey">

     
    <h1>Hello, <%= data.name  %></h1>
    <div id="dibba">
      <div id="btn"> <div class="cartlogo"><%=data.cart.length%></div> <a href="/cart/<%= data.id  %>"> Cart</a></div>
      <div id="btn1"> <a href="/logout"> Logout</a></div>

    </div>
   
  </div>

    <form action="/makeproduct" id="cartform" method="post">

        <input type="text" name="productname" placeholder="productname"  >
        <input type="text" name="productimage" placeholder="productimage">
        <input type="text" name="productprice" placeholder="productprice">
        <input type="submit" value="submit">
    </form>


    <div id="box">
       <% cart.forEach(function(cart){ %>
            <div id="box1">
              <div id="box2">
              <img src="<%= cart.productimage%>" alt="">
            </div>
                <div id="box3">
                  <h3><%= cart.productname %></h3>
                <div id="patti">
                  <h4><%= cart.productprice %></h4>
                  <form action="/cart/<%= cart._id %>" method="post">
                  <input type="submit"  value="Add to cart">

                  </form>

                </div>
                
               </div>
                
            </div>
       <% }) %>
    </div>

</body>
</html>